@using Gold.ApplicationService.Contract.DTOs.ViewModels.AuthenticationViewModels;
@using Gold.Resources;
@model LoginViewModel
@{
	ViewData["Title"] = Captions.Success;
	ViewData["IsShowBackgroundImage"] = true;
}


<div class="container">
	<div id="loginArea" class="row justify-content-center">
		<div class="col-12 col-sm-10 col-md-9 col-lg-5">
			<div class="card  shadow overflow-hidden">

				<div class="card-body">
					<form class="dir-rtl p-1">
						<div class="title-section mb-5 mt-2 text-center text-white">
							<h5 class="fw-bold">
								@UserMessages.YourPasswordChangedSuccessfuly
							</h5>
						</div>
						<div class="row">
							<div class="col-12 col-md-12 text-center">
								<a href="/login" class="btn btn-primary px-5">@Captions.EnteringSystem</a>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>