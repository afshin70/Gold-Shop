@using Gold.ApplicationService.Contract.DTOs.ViewModels.CustomerViewModels;
@model CardNumberViewModel
@{
	Layout = null;
}
<div class="container bg-dark rounded dir-rtl">
	<form action="/User/AddBankCardNumbers" onsubmit="addNewBankCardNumber(this,'bankCardNumberModal','@UserMessages.AreYouSure')">
		<div class="row">
			<div class="col-12 col-sm-6 mb-3">
				<label asp-for="CardNumber" class="small mb-2 text-white"></label>
				<input asp-for="CardNumber" class="form-control card-number" autocomplete="off" />
				<span asp-validation-for="CardNumber" class="text-danger"></span>
			</div>
			<div class="col-12 col-sm-6 mb-3">
				<label asp-for="Owner" class="small mb-2 text-white"></label>
				<input asp-for="Owner" class="form-control" />
				<span asp-validation-for="Owner" class="text-danger"></span>
			</div>
		</div>
		<div class="col-12">
			<button type="submit" class="btn btn-primary">@Captions.Register</button>
			<button type="button" data-bs-dismiss="modal" class="btn btn-outline-gray_light">@Captions.Cancel</button>
		</div>
	</form>
	<div class="overflow-auto mt-5" style="max-height:300px">
		<table class="table table-dark table-striped">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">@Captions.CardNumber</th>
					<th scope="col">@Captions.CardNumberOwner</th>
				</tr>
			</thead>
			<tbody>
				@if (Model.CardNumbers is not null)
				{
					int i = 1;
					foreach (var item in Model.CardNumbers.OrderBy(x => x.OrderNumber).ToList())
					{
						<tr class="table-dark">
							<td>@i</td>
							<td>@item.Number</td>
							<td>@item.Owner</td>
						</tr>
						i++;
					}
				}
			</tbody>
		</table>
	</div>
</div>
