@using Gold.ApplicationService.Contract.DTOs.Models.DocumentModels;
@model List<SendMessageModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa-IR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/themes/default/css/print.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <table border="0" cellspacing="0" cellpadding="0">
            <tbody>
                <tr>
                    <td class="td-33 pb-15 right">
                    </td>
                    <td class="td-33 pb-15 center">
                        <h3>@Captions.List @Captions.CustomerInfo</h3>
                        @*<img src="~/Images/logo.png" />*@
                    </td>
                    <td class="td-33 pb-15 left rtl">
                        <h3>@Captions.Date : @DateTime.Now.ToPersianDateString()</h3>
                    </td>
                </tr>
            </tbody>
        </table>
        @if (Model != null && Model.Any())
        {
            <table border="0" cellspacing="0" cellpadding="0" class="table-border-print color center">
                <thead>
                    <tr>
                        <th class="td-5">#</th>
                        <th class="td-10"><b>@Captions.FullName</b></th>
                        <th class="td-10"> <b>@Captions.Nationality</b></th>
                        <th class="td-10"> <b>@Captions.NationalCode_UserName</b></th>
                        <th class="td-10"><b>@Captions.Mobile</b></th>
                        <th class="td-10"><b>@Captions.AccountStatus</b></th>
                        <th class="td-10"><b>@Captions.RegisteryDate</b></th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int row = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="td-5">@row</td>
                                <td class="td-10">@item.CustomerName</td>
                                <td class="td-10">@item.Nationality</td>
                                <td class="td-10">@item.NationalCode</td>
                                <td class="td-10">@item.Mobile</td>
                                <td class="td-10">@item.AccountStatus</td>
                                <td class="td-10">@item.RegisterDate</td>
                            </tr>
                            row++;
                        }
                    }
                </tbody>
            </table>
        }

    </div>
    <div class="clearfix"></div>
</body>
</html>