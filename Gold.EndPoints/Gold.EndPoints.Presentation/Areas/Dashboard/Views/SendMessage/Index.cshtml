@{
    ViewData["Title"] = Captions.SendMessage;
   ViewBag.SelectedMenu = (byte)ManagerPermission.SendMessage;
}

<div class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">
            <span> @Captions.SendMessage</span>
        </h6>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
            </ul>
        </div>
    </div>
    <div>
        <partial name="SendMessageSearchForm" />
    </div>
</div>
<div class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">
            <span>@Captions.SendMessage</span>
        </h6>
        <div class="heading-elements">
            <ul class="icons-list">
                <li><a data-action="collapse"></a></li>
            </ul>
        </div>
    </div>
    <partial name="SendMessageForm" />

</div>

<div class="panel panel-flat">
    <div class="panel-heading">
        <h6 class="panel-title">
            <span>@Captions.List @Captions.Customers</span>
        </h6>
        <div class="heading-elements">
            <button type="button" onclick="exportFile('/Dashboard/SendMessage/InitReportData',GetData(),'/Dashboard/SendMessage/ExportExcel')" class="btn btn-labeled legitRipple"><span>@Captions.ExcelExport</span> <b><i class="fa fa-download"></i></b></button>
            <button type="button" onclick="exportFile('/Dashboard/SendMessage/InitReportData',GetData(),'/Dashboard/SendMessage/ExportPdf')" class="btn btn-labeled legitRipple"><span>@Captions.PdfExport</span> <b><i class="fa fa-download"></i></b></button>

            <ul class="icons-list left-align">
                <li><a data-action="collapse"></a></li>
            </ul>
        </div>
    </div>

    <div id="customerList">
        <partial name="SendMessageSearchList" />
    </div>
</div>
@section Stylesheet{
    <link href="~/lib/persiandatetimepicker/persiandatepicker.min.css" rel="stylesheet" />
}

@section Scripts{

    <script src="~/themes/default/js/plugins/forms/selects/select2.min.js"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $('select').select2();
        });
    </script>
    <script src="~/lib/jquery-mask-plugin/dist/jquery.mask.min.js"></script>
    <script src="~/lib/persiandatetimepicker/persiandatepicker.min.js"></script>

 }
