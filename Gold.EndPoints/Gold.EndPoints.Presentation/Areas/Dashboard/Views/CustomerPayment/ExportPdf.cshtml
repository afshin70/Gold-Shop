@using Gold.ApplicationService.Contract.DTOs.Models.CustomerModels.CustomerPymentsModel;
@model List<PaymentReceiptsInPendingConfirmationModel>
@{
	Layout = null;
}
<!DOCTYPE html>
<html lang="fa-IR">
<head>
	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link href="~/themes/default/css/print.css" rel="stylesheet" />
</head>
<body>
	<div class="main">
		<table border="0" cellspacing="0" cellpadding="0">
			<tbody>
				<tr>
					<td class="td-33 pb-15 right">
					</td>
					<td class="td-33 pb-15 center">
						<h3>@Captions.List @Captions.Payment @Captions.Customers </h3>
						@*<img src="~/Images/logo.png" />*@
					</td>
					<td class="td-33 pb-15 left rtl">
						<h3>@Captions.Date : @DateTime.Now.ToPersianDateString()</h3>
					</td>
				</tr>
			</tbody>
		</table>
		@if (Model != null && Model.Any())
		{
			<table border="0" cellspacing="0" cellpadding="0" class="table-border-print color center">
				<thead>
					<tr>
						<th class=" ">#</th>
						<th class=" "><b>@Captions.DocumentNumber</b></th>
						<th class=""><b>@Captions.FullName</b></th>
						<th class=""><b>@Captions.DocumentDate</b></th>
						<th class=""><b>@Captions.InstallmentPrice</b></th>
						<th class=""><b>@Captions.PayDateTime</b></th>
						<th class=""><b>@Captions.PayAmount</b></th>
						<th class=""><b>@Captions.RegisterDate</b></th>
						<th class=""><b>@Captions.Status</b></th>

					</tr>
				</thead>
				<tbody>
					@if (Model != null)
					{
						int row = 1;
						foreach (var item in Model)
						{
							<tr>
								<td class="">@row</td>
								<td class="">@item.DocumentNumber</td>
								<td class="">@item.FullName</td>
								<td class="">@item.PersianDocumentDate</td>
								<td class="">@item.InstallmentAmount.ToString("N0")</td>
								<td class="">@item.PersianPayDate</td>
								<td class="">@item.PayAmount.FormatMoney()</td>
								<td class="">@item.PersianRegisterDate</td>
								<td class="">@item.StatusDescription</td>
							</tr>
							row++;
						}
					}
				</tbody>
			</table>
		}
	</div>
	<div class="clearfix"></div>
</body>
</html>