@using Gold.ApplicationService.Contract.DTOs.Models.SellerModels;
@model List<SellerReportModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa-IR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/themes/default/css/print.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <table border="0" cellspacing="0" cellpadding="0">
            <tbody>
                <tr>
                    <td class="td-33 pb-15 right">
                    </td>
                    <td class="td-33 pb-15 center">
                        <h3>@Captions.List @Captions.Sellers</h3>
                        @*<img src="~/Images/logo.png" />*@
                    </td>
                    <td class="td-33 pb-15 left rtl">
                        <h3>@Captions.Date : @DateTime.Now.ToPersianDateString()</h3>
                    </td>
                </tr>
            </tbody>
        </table>
        @if (Model != null && Model.Any())
        {
            <table border="0" cellspacing="0" cellpadding="0" class="table-border-print color center">
                <thead>
                    <tr>
                        <th class="">#</th>
                        <th class=""><b>@Captions.Name</b></th>
                        <th class=""><b>@Captions.UserName</b></th>
                        <th class=""><b>@Captions.Mobile</b></th>
                        <th class=""><b>@Captions.Gallery</b></th>
                        <th class=""><b>@Captions.ProductRegisterPerMinCount</b></th>
                        <th class=""><b>@Captions.RegisterLoan</b></th>
                        <th class=""><b>@Captions.RegisterProduct</b></th>
                        <th class=""><b>@Captions.Status</b></th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int row = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="">@row</td>
                                <td class="">@item.FullName</td>
                                <td class="">@item.UserName</td>
                                <td class="">@item.Mobile</td>
                                <td class="">@item.GalleryName</td>
                                <td class="">@item.ProductRegisterPerMinCount</td>
                                <td class="">@(item.HasAccessToRegisterLoan ? Captions.Active : Captions.DeActive)</td>
                                <td class="">@(item.HasAccessToRegisterProduct ? Captions.Active : Captions.DeActive)</td>
                                <td class="">@(item.IsActive ? Captions.Active : Captions.DeActive)</td>
                            </tr>
                            row++;
                        }
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="clearfix"></div>
</body>
</html>
