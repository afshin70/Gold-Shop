@using Gold.ApplicationService.Contract.DTOs.ViewModels.ArticleViewModels;
@model CreateOrEditArticleViewModel
@{
    Layout = null;
}
<form id="CreateOrEditArticelForm" action="/Dashboard/Article/CreateOrEditArticel" onsubmit="submitByRefreshGrid(this, gridName,resetArticleForm)" method="post">
    <div class="panel-body">
        <input asp-for="Id" type="hidden" />
        <div class="section row">
            <div class="col-xs-12 col-md-6 form-group">
                <label asp-for="Title" class="star"></label>
                <input asp-for="Title" type="text" class="form-control" autocomplete="off">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            
        </div>
        <div class="section row">
             <div class="col-xs-12 col-md-6 form-group">
               <label asp-for="Description" class=""></label>
                <input asp-for="Description" type="hidden" />
                <textarea id="DescriptionEditor">@Html.Raw(Model?.Description)</textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="panel-footer text-right">
        <button type="submit" class="btn btn-success btn-labeled"><span>@Captions.SubmitInformation</span> <b><i class="fa fa-check-circle"></i></b></button>
        <button type="button" onclick="resetArticleForm()" class="btn bg-slate btn-labeled legitRipple"><span>@Captions.Cancel</span> <b><i class="fa fa-times-circle"></i></b></button>
    </div>
</form>
