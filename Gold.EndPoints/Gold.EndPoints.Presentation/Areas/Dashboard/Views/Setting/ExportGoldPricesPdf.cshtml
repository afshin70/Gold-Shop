@using Gold.ApplicationService.Contract.DTOs.Models.GoldPriceModels;
@model List<GoldPriceExportPdfModel>
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="fa-IR">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/themes/default/css/print.css" rel="stylesheet" />
</head>
<body>
    <div class="main">
        <table border="0" cellspacing="0" cellpadding="0">
            <tbody>
                <tr>
                    <td class="td-33 pb-15 right">
                    </td>
                    <td class="td-33 pb-15 center">
                        <h3>@Captions.List @Captions.GoldPrice</h3>
                        @*<img src="~/Images/logo.png" />*@
                    </td>
                    <td class="td-33 pb-15 left rtl">
                        <h3>@Captions.Date : @DateTime.Now.ToPersianDateString()</h3>
                    </td>
                </tr>
            </tbody>
        </table>
        @if (Model != null && Model.Any())
        {
            <table border="0" cellspacing="0" cellpadding="0" class="table-border-print color center">
                <thead>
                    <tr>
                        <th class="">#</th>
                        <th class=""><b>@Captions.Shekel</b></th>
                        <th class=""><b>@Captions.GoldAnas</b></th>
                        <th class=""><b>@Captions.OneGram18KaratGold</b></th>
                        <th class=""><b>@Captions.BankCoin</b></th>
                        <th class=""><b>@Captions.BankHalfCoin</b></th>
                        <th class=""><b>@Captions.BankQuarterCoin</b></th>
                        <th class=""><b>@Captions.GramCoin</b></th>
                        <th class=""><b>@Captions.OldCoin</b></th>

                    </tr>
                </thead>
                <tbody>
                    @if (Model != null)
                    {
                        int row = 1;
                        foreach (var item in Model)
                        {
                            <tr>
                                <td class="">@row</td>
                                <td class="">@(string.IsNullOrEmpty(item.Shekel) ? string.Empty : $"{item.Shekel} {Captions.Tooman}")</td>
                                <td class="">@(string.IsNullOrEmpty(item.Anas) ? string.Empty : $"{item.Anas} {Captions.Doller}")</td>
                                <td class="">@(string.IsNullOrEmpty(item.Karat18) ? string.Empty : $"{item.Karat18} {Captions.Tooman}")</td>
                                <td class="">@(string.IsNullOrEmpty(item.Coin) ? string.Empty : $"{item.Coin} {Captions.Tooman}")</td>
                                <td class="">@(string.IsNullOrEmpty(item.HalfCoin) ? string.Empty : $"{item.HalfCoin} {Captions.Tooman}")</td>
                                <td class="">@(string.IsNullOrEmpty(item.Shekel) ? string.Empty : $"{item.Shekel} {Captions.Tooman}")</td>
                                <td class="">@(string.IsNullOrEmpty(item.GramCoin) ? string.Empty : $"{item.GramCoin} {Captions.Tooman}")</td>
                                <td class="">@(string.IsNullOrEmpty(item.OldCoin) ? string.Empty : $"{item.OldCoin} {Captions.Tooman}")</td>
                            </tr>
                            row++;
                        }
                    }
                </tbody>
            </table>
        }
    </div>
    <div class="clearfix"></div>
</body>
</html>
