@using Gold.ApplicationService.Contract.DTOs.ViewModels.SettingsViewModels
@model ScriptsSettingsViewModel
@{
    Layout = null;
}
<form id="form_scriptSettings" action="/Dashboard/Setting/ScriptSettings" onsubmit="submitFormAndGetResult(this,'scriptSettings');" method="post">
    <div class="panel-body">
        <div class="section row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 form-group">
                <label asp-for="Header"></label>
                <div class="input-group">
                    <textarea asp-for="Header" class="form-control" rows="5"></textarea>
                    <span class="input-group-addon"><i class="fa fa-pen"></i></span>
                </div>
                <span asp-validation-for="Header" class="text-danger"></span>
            </div>
        </div>
        <div class="section row">
            <div class="col-lg-9 col-md-9 col-sm-9 col-xs-12 form-group">
                <label asp-for="Footer"></label>
                <div class="input-group">
                    <textarea asp-for="Footer" class="form-control" rows="5"></textarea>
                    <span class="input-group-addon"><i class="fa fa-pen"></i></span>
                </div>
                <span asp-validation-for="Footer" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="panel-footer text-right">
        <button type="submit" class="btn btn-success btn-labeled"><span>@Captions.SubmitInformation</span> <b><i class="fa fa-check-circle"></i></b></button>
    </div>
</form>