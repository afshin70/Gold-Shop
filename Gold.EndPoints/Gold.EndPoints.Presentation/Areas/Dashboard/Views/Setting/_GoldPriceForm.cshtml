@using Gold.ApplicationService.Contract.DTOs.ViewModels.GoldPriceViewModels;
@using Gold.ApplicationService.Contract.DTOs.ViewModels.SettingsViewModels
@model GoldPriceViewModel
@{
    Layout = null;
}

<form id="form_goldPrice" action="/Dashboard/Setting/AddGoldPriceInfo" onsubmit="submitGoldPriceInfoFormByRefreshGrid(this,gridName);" method="post">
    <div class="panel-body">
        <div class="section row">
            <label asp-for="Shekel" class="col-xs-12 col-sm-3 col-md-2 ">@($"{Captions.Shekel}")</label>
            <div class="col-xs-10 col-sm-4 form-group">
                <div class="input-group">
                    <input asp-for="Shekel" onkeyup="monyFormat(this)" maxlength="13" class="form-control" onkeypress="return safeOnlyNumber($(this),event)" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
                <span asp-validation-for="Shekel" class="text-danger"></span>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Tooman
            </div>
        </div>
        <div class="section row">
            <label asp-for="Anas" class="col-xs-12 col-sm-3 col-md-2">@($"{Captions.GoldAnas}")</label>
            <div class="col-xs-10 col-sm-4 form-group">

                <div class="input-group">
                    <input asp-for="Anas" type="number" step="0.01" min="0.00" max="999999.99" maxlength="9" class="form-control" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Doller
            </div>
        </div>
        <div class="section row">
            <label asp-for="Karat18" class="col-xs-12 col-sm-3 col-md-2 star">@($"{Captions.OneGram18KaratGold}")</label>
            <div class="col-xs-10 col-sm-4 form-group">

                <div class="input-group">
                    <input asp-for="Karat18" class="form-control" maxlength="13" onkeyup="monyFormat(this)" onkeypress="return safeOnlyNumber($(this),event)" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
                <span asp-validation-for="Karat18" class="text-danger"></span>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Tooman
            </div>
        </div>
        <div class="section row">
            <label asp-for="Coin" class="col-xs-12 col-sm-3 col-md-2 ">@($"{Captions.BankCoin}")</label>
            <div class="col-xs-10 col-sm-4 form-group">

                <div class="input-group">
                    <input asp-for="Coin" onkeyup="monyFormat(this)" maxlength="13" class="form-control" onkeypress="return safeOnlyNumber($(this),event)" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
                <span asp-validation-for="Coin" class="text-danger"></span>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Tooman
            </div>
        </div>
        <div class="section row">
            <label asp-for="OldCoin" class="col-xs-12 col-sm-3 col-md-2 ">@($"{Captions.OldCoin}")</label>
            <div class="col-xs-10 col-sm-4 form-group">

                <div class="input-group">
                    <input asp-for="OldCoin" onkeyup="monyFormat(this)" maxlength="13" class="form-control" onkeypress="return safeOnlyNumber($(this),event)" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
                <span asp-validation-for="OldCoin" class="text-danger"></span>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Tooman
            </div>
        </div>
        <div class="section row">
            <label asp-for="HalfCoin" class="col-xs-12 col-sm-3 col-md-2 ">@($"{Captions.BankHalfCoin}")</label>
            <div class="col-xs-10 col-sm-4 form-group">

                <div class="input-group">
                    <input asp-for="HalfCoin" onkeyup="monyFormat(this)" maxlength="13" class="form-control" onkeypress="return safeOnlyNumber($(this),event)" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
                <span asp-validation-for="HalfCoin" class="text-danger"></span>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Tooman
            </div>
        </div>
        <div class="section row">
            <label asp-for="QuarterCoin" class="col-xs-12 col-sm-3 col-md-2 ">@($"{Captions.BankQuarterCoin}")</label>
            <div class="col-xs-10 col-sm-4 form-group">

                <div class="input-group">
                    <input asp-for="QuarterCoin" onkeyup="monyFormat(this)" maxlength="13" class="form-control" onkeypress="return safeOnlyNumber($(this),event)" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
                <span asp-validation-for="QuarterCoin" class="text-danger"></span>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Tooman
            </div>
        </div>
        <div class="section row">
            <label asp-for="GramCoin" class="col-xs-12 col-sm-3 col-md-2 ">@($"{Captions.GramCoin}")</label>
            <div class="col-xs-10 col-sm-4 form-group">

                <div class="input-group">
                    <input asp-for="GramCoin" onkeyup="monyFormat(this)" maxlength="13" class="form-control" onkeypress="return safeOnlyNumber($(this),event)" />
                    <span class="input-group-addon"><i class="fa fa-dollar-sign"></i></span>
                </div>
                <span asp-validation-for="GramCoin" class="text-danger"></span>
            </div>
            <div class="col-xs-2 col-sm-1">
                @Captions.Tooman
            </div>
        </div>
    </div>

    <div class="panel-footer text-right">
        <button type="submit" class="btn btn-success btn-labeled"><span>@Captions.SubmitInformation</span> <b><i class="fa fa-check-circle"></i></b></button>
        <button type="reset" class="btn bg-slate btn-labeled legitRipple"><span>@Captions.Cancel</span> <b><i class="fa fa-times-circle"></i></b></button>
    </div>
</form>